<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoFragment">

    <ScrollView
        android:id="@+id/scrollResultados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/Resultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Resultados"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/precion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Presi칩n arterial: 130"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/Azul"
                android:text="Normal"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Temperatura"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/grado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Azul"
                android:text="Normal"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/Recomendacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:backgroundTint="@color/Azul"
                android:text="Ver Recomendaciones"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed" />

            <Button
                android:id="@+id/historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:backgroundTint="@color/Azul"
                android:text="Historial"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="Los valores mostrados en la medici칩n de signos vitales son aproximados y pueden tener un peque침o margen de error. Para un diagn칩stico preciso, se recomienda consultar a un profesional de la salud."
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="19dp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
