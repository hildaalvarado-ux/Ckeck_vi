<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marino"
    tools:context=".sobrenosotrosMainActivity2">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1B485B"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Volver (izquierda) -->
        <ImageView
            android:id="@+id/volver"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitStart"
            android:contentDescription="Volver"

            android:src="@drawable/arrow_left_circle_fill" />

        <!-- Botón Usuario (derecha) -->
        <ImageView
            android:id="@+id/userButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitEnd"
            android:contentDescription="Botón de usuario"
            android:src="@drawable/icono_user"
            android:layout_gravity="end|center_vertical" />
    </LinearLayout>

    <!-- Rectángulo decorativo -->
    <!-- Rectángulo de fondo -->
    <View
        android:id="@+id/rectangulo"
        android:layout_width="387dp"
        android:layout_height="673dp"
        android:background="@drawable/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView del mismo tamaño que el rectángulo -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="387dp"
        android:layout_height="673dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/rectangulo"
        app:layout_constraintBottom_toBottomOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/texsobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Sobre Nosotros"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="25dp"
                android:textStyle="bold" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/texbienve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="¡Bienvenido a Check Vi! "
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="25dp" />

            <!-- Texto desplazable -->
            <TextView
                android:id="@+id/textoInformativo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="24dp"
                android:text="El objetivo de la aplicación es ofrecer una herramienta para monitorear y registrar signos vitales, como la temperatura corporal y la presión arterial. Además, proporcionará recomendaciones de salud personalizadas y un historial, permitiendo a los usuarios hacer un seguimiento continuo de su bienestar.\n\nNuestra misión: Queremos que más personas puedan cuidar su salud. Por eso creamos una app simple y útil, que te ayudara a estar pendiente del control en tus signos vitales.\n\nNuestro equipo: Somos un grupo de estudiantes comprometidas con la tecnología que han unido sus habilidades para el desarrollo de esta aplicación.\n\n¡Esperamos que disfrutes tanto usándola como nosotras disfrutamos creándola!\n\n¡Gracias por ser parte de Check Vi!\nSi tienes alguna sugerencia o quieres compartir tu experiencia, no dudes en contactarnos."
                android:textColor="@color/Azul"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1B485B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_house"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Inicio" />

        <ImageView
            android:id="@+id/historial"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_favorite"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Agregar" />

        <ImageView
            android:id="@+id/configuracion"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_setting"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Configuración" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>