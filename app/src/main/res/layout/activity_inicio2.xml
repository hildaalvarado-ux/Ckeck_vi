<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marino"
    tools:context=".inicioActivity2">
    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1B485B"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/userButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitEnd"
            android:contentDescription="Botón de usuario"
            android:src="@drawable/icono_user" />

    </LinearLayout>


    <!-- Navegación inferior -->

    <View
        android:id="@+id/rectangulo"
        android:layout_width="387dp"
        android:layout_height="673dp"
        android:background="@drawable/rectangulo_azul"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout" />


    <Button
        android:id="@+id/ver"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/marino"
        android:fontFamily="sans-serif-condensed"
        android:text="ver"
        android:textColor="@color/Azul"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toTopOf="@+id/rectangulo" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="301dp"
        android:layout_height="106dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Tu bienestar es lo más importante. Monitorea y cuida tu salud cada día."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/bienvenido" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Pasos para el uso de aplicacion"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/texto"
        app:srcCompat="@drawable/salud" />


    <Button
        android:id="@+id/Vincular"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/marino"
        android:fontFamily="sans-serif-condensed"
        android:text="Vincular"
        android:textColor="@color/Azul"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/ver" />

    <Button
        android:id="@+id/desconectar"
        android:layout_width="176dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/marino"
        android:fontFamily="sans-serif-condensed"
        android:text="Desconectar"
        android:textColor="@color/Azul"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangulo"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/Comenzar"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/Comenzar"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/marino"
        android:fontFamily="sans-serif-condensed"
        android:text="Comenzar"
        android:textColor="@color/Azul"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toBottomOf="@+id/Vincular" />

    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1B485B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_house"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Inicio" />

        <ImageView
            android:id="@+id/historial"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_favorite"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Agregar" />

        <ImageView
            android:id="@+id/configuracion"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_weight="1"
            android:src="@drawable/icono_setting"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Configuración" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>